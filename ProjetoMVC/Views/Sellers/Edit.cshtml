@model ProjetoMVC.Models.ViewModels.SellerFormViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Update seller";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-4">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <form asp-action="Edit">
            <input 
                type="hidden"
                asp-for="Seller.Id"
            />
            <div class="mb-3">
                <label for="name" asp-for="Seller.Name" class="form-label">Name</label>
                <input type="text"
                       id="name"
                       asp-for="Seller.Name"
                       class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Seller.Email" for="email" class="form-label">Email</label>
                <input type="email"
                       id="email"
                       asp-for="Seller.Email"
                       class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Seller.BirthDate" for="birth-date" class="form-label">Birth Date</label>
                <input type="date"
                       id="birth-date"
                       asp-for="Seller.BirthDate"
                       class="form-control" />
            </div>
            <div>
                <label asp-for="Seller.BaseSalary" for="salary" class="form-label">Salary</label>
                <input type="text"
                       id="salary"
                       asp-for="Seller.BaseSalary"
                       class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Seller.Department.Id" for="department" class="form-label">Department</label>
                <select class="form-select" asp-for="Seller.Department.Id" for="department">
                    <option value="0" disabled selected>Choose one department</option>
                    @foreach (Department department in Model.Departments)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Edit seller</button>
            </div>
        </form>
    </div>
</div>
